@{
    ViewBag.Title = "Intro";

}



<div id="login" class="container">
    <div class="row" style="margin-bottom:15px;">
        <div class="col-sm-offset-2">
            <h1>Groops</h1>
            <p>Please introduce yourself.</p>
        </div>
    </div>
</div>


<div class="row">
    <form class="form-horizontal" role="form" action="/api/GroopsAPIUsers" method="POST">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="name" placeholder="First Last" required />
            </div>
        </div>

        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-8">
                <input type="email" class="form-control" name="email" placeholder="you@domain.com" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-lg">
                    Let's Go
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>
        </div>
    </form>

    <div id="created"></div>

</div>


@section scripts{
    <script type="text/javascript">
        

            $("form").submit(function (event) {
                $.ajax({
                    data: $(this).serialize(),
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    success: function (response) {
                        $("#created").html(response);
                        //now that we have the new userId, we can redirect to a new page
                        window.location.href = "/home/rooms/?userID=" + response;
                    }
                });
                return false;
            })

    </script>
}